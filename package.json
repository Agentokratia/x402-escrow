    "@x402/next": "^2.0.0",
    "axios": "^1.13.2",
    "dotenv": "^17.2.3",
    "eslint": "^9",
    "eslint-config-next": "16.1.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.4.2",
    "typescript": "^5",
    "vitest": "^2.1.0"
