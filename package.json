  "author": "Agentokratia",
  "repository": {
    "type": "git",
    "url": "https://github.com/agentokratia/x402-escrow"
  },
  "homepage": "https://facilitator.agentokratia.com",
  "keywords": [
    "x402",
    "escrow",
    "payments",
    "ethereum",
    "base",
    "usdc",
    "erc-3009",
    "facilitator"
  ],
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:integration": "vitest run --config vitest.integration.config.ts",
    "test:client": "vitest run --config vitest.client.config.ts",
    "test:coverage": "vitest run --coverage",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,css}": [
      "prettier --write"
    ]
